<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/projects/{{project.id}}">{{project.title}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{ project.quote}}</span>
    </p>
    <p>Date created on {{form_date project.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.body}}
    </p>
  </div>
</div>
{{/each}}